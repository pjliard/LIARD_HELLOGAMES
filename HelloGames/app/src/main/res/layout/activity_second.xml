<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline7"
            app:layout_constraintGuide_percent="1.0"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline8" app:layout_constraintGuide_percent="0.0"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline9"
            app:layout_constraintGuide_percent="0.39"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline10"
            app:layout_constraintGuide_percent="0.1"/>
    <TextView
            android:text="Game Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/guideline8"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline10" android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright" android:textSize="24sp"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline11" app:layout_constraintGuide_percent="0.41"/>
    <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textStyle="bold"
            android:textColor="@android:color/background_dark" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline11"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline10"/>
    <TextView
            android:text="Type:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textStyle="bold"
            android:textColor="@android:color/background_dark" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline11"
    />
    <TextView
            android:text="Nb players:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/guideline11"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:textColor="@android:color/background_dark"
            android:textStyle="bold"/>
    <TextView
            android:text="Year:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textStyle="bold"
            android:textColor="@android:color/background_dark" app:layout_constraintStart_toStartOf="@+id/guideline11"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline10"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nbplayers" app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/type"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/year" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nbplayers" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="8dp"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline13" app:layout_constraintGuide_percent="0.5029354"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline14" app:layout_constraintGuide_percent="0.7"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline15"
            app:layout_constraintGuide_percent="0.05"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline16" app:layout_constraintGuide_percent="0.95"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/desc" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline13" app:layout_constraintStart_toStartOf="@+id/guideline15"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline16"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline14"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline17" app:layout_constraintGuide_percent="0.8"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline18" app:layout_constraintGuide_percent="0.9"/>
    <Button
            android:text="DO YOU WANT TO KNOW MORE ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info" app:layout_constraintEnd_toStartOf="@+id/guideline16"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline18" app:layout_constraintTop_toTopOf="@+id/guideline17"
            app:layout_constraintStart_toStartOf="@+id/guideline15" android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/img" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline10" app:layout_constraintStart_toStartOf="@+id/guideline8"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline11"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline9"/>
</android.support.constraint.ConstraintLayout>